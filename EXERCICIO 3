#include <stdio.h>

//Considere o seguinte array : [2, 4, 6, 10, 9, 12] .Desenhe o passo a passo da
//execução do algoritmo Bubble Sort para ordenar em ordem crescente

void imprimir_array(int array[], int n)
{
    for(int k =0; k < n; k++){
		    printf("%d ", array[k]);
		}
		printf("\n");
}

void bubble_sort(int array[], int n) {
	for (int j = 0; j < n - 1;j++) {
		for (int i = 0; i < n - j - 1;i++) {
			if (array[i] > array[i + 1]) {
				int aux = array[i];
				array[i] = array[i + 1];
				array[i + 1] = aux;
			}
		}
		imprimir_array(array, n);
	}
			
}

int main() {
	int tamanho = 6;//array[];
	
	int array[] = {10, 9, 12, 4,6,2};

	/*printf("Digite o tamanho do array: \n");
	scanf("%d", &tamanho);

	for (int i = 0; i <= tamanho; i++) {
		printf("Digite os números em ordem decrescente: ");
		scanf("%d", &array[i]);
	}*/
	//bubble_sort(array, tamanho);
	imprimir_array(array, tamanho);
	
	
	
	




}
